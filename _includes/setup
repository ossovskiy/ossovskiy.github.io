{% assign SITE_URL = "" %}
{% else %}
{% assign SITE_URL = site.url %}
{% endif %}
<!-- for github pages where jekyll works in Safe Mode-->
{% if site.safe  %}
{% assign SITE_URL = site.url %}
{% endif %}

